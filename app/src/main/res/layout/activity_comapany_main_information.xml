<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey"
    tools:context=".company_panel.UpdateMainInformation">
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginTop="5sp"
             android:padding="0dp"
             android:background="@color/darkGrey"
             android:orientation="vertical"
             android:id="@+id/form">
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:textSize="15sp"
                 android:text="@string/name"
                 android:textStyle="italic"
                 android:textColor="#D3D3D3"
                 android:textAllCaps="false"
                 android:layout_marginStart="20sp"
                 android:layout_marginEnd="20dp"
                 android:padding="2sp" />
             <ImageView
                 android:layout_width="match_parent"
                 android:layout_marginTop="2dp"
                 android:layout_height="2dp"
                 android:background="#A9A9A9"
                 android:layout_marginRight="20dp"
                 android:layout_marginLeft="20dp"/>
             <TextView
                 android:id="@+id/company_edit_text"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginEnd="10dp"
                 android:padding="8sp"
                 android:layout_marginStart="20sp"
                 android:textAllCaps="false"
                 android:textColor="@color/brightGrey"
                 android:textSize="15sp"
                 android:textStyle="italic"/>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:textSize="15sp"
                 android:text="@string/nip"
                 android:textStyle="italic"
                 android:textColor="#D3D3D3"
                 android:textAllCaps="false"
                 android:layout_marginStart="20sp"
                 android:layout_marginEnd="20dp"
                 android:padding="2sp" />
             <ImageView
                 android:layout_width="match_parent"
                 android:layout_marginTop="2dp"
                 android:layout_height="2dp"
                 android:background="#A9A9A9"
                 android:layout_marginRight="20dp"
                 android:layout_marginLeft="20dp"/>
             <TextView
                 android:id="@+id/nip_edit_text"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginEnd="10dp"
                 android:padding="8sp"
                 android:layout_marginStart="20sp"
                 android:textAllCaps="false"
                 android:textColor="@color/brightGrey"
                 android:textSize="15sp"
                 android:textStyle="italic"/>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:textSize="15sp"
                 android:text="@string/email"
                 android:textStyle="italic"
                 android:textColor="#D3D3D3"
                 android:textAllCaps="false"
                 android:layout_marginStart="20sp"
                 android:layout_marginEnd="20dp"
                 android:padding="2sp" />
             <ImageView
                 android:layout_width="match_parent"
                 android:layout_marginTop="2dp"
                 android:layout_height="2dp"
                 android:background="#A9A9A9"
                 android:layout_marginRight="20dp"
                 android:layout_marginLeft="20dp"/>
             <TextView
                 android:id="@+id/email_edit_text"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textSize="15sp"
                 android:textStyle="italic"
                 android:textColor="@color/brightGrey"
                 android:textAllCaps="false"
                 android:layout_marginEnd="10dp"
                 android:layout_marginStart="20sp"
                 android:padding="8sp"/>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:textSize="15sp"
                 android:text="@string/City"
                 android:textStyle="italic"
                 android:textColor="#D3D3D3"
                 android:textAllCaps="false"
                 android:layout_marginStart="20sp"
                 android:layout_marginEnd="20dp"
                 android:paddingEnd="25sp" />
             <ImageView
                 android:layout_width="match_parent"
                 android:layout_marginTop="5dp"
                 android:layout_height="2dp"
                 android:background="#A9A9A9"
                 android:layout_marginRight="20dp"
                 android:layout_marginLeft="20dp"/>
             <EditText
                 android:id="@+id/city_edit_text"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textSize="20sp"
                 android:textStyle="italic"
                 android:textColor="@color/white"
                 android:textAllCaps="false"
                 android:layout_marginEnd="10dp"
                 android:layout_marginStart="20sp" />

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:textSize="15sp"
                 android:text="@string/Street"
                 android:textStyle="italic"
                 android:textColor="#D3D3D3"
                 android:textAllCaps="false"
                 android:layout_marginStart="20sp"
                 android:layout_marginEnd="20dp"
                 android:paddingEnd="25sp" />
             <ImageView
                 android:layout_width="match_parent"
                 android:layout_marginTop="2dp"
                 android:layout_height="2dp"
                 android:background="#A9A9A9"
                 android:layout_marginRight="20dp"
                 android:layout_marginLeft="20dp"/>
                 <EditText
                     android:id="@+id/street_edit_text"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="20sp"
                     android:textStyle="italic"
                     android:textColor="@color/white"
                     android:textAllCaps="false"
                     android:layout_marginEnd="10dp"
                     android:layout_marginStart="20sp" />
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:textSize="15sp"
                 android:text="@string/Number"
                 android:textStyle="italic"
                 android:textColor="#D3D3D3"
                 android:textAllCaps="false"
                 android:layout_marginStart="20sp"
                 android:layout_marginEnd="20dp"
                 android:paddingEnd="25sp" />
             <ImageView
                 android:layout_width="match_parent"
                 android:layout_marginTop="5dp"
                 android:layout_height="2dp"
                 android:background="#A9A9A9"
                 android:layout_marginRight="20dp"
                 android:layout_marginLeft="20dp"/>
                 <EditText
                     android:id="@+id/number_edit_text"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="20sp"
                     android:textStyle="italic"
                     android:textColor="@color/white"
                     android:textAllCaps="false"
                     android:layout_marginEnd="10dp"
                     android:layout_marginStart="20sp" />

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:textSize="15sp"
                 android:text="@string/Phone"
                 android:textStyle="italic"
                 android:textColor="#D3D3D3"
                 android:textAllCaps="false"
                 android:layout_marginStart="20sp"
                 android:layout_marginEnd="20dp"
                 android:paddingEnd="25sp" />
             <ImageView
                 android:layout_width="match_parent"
                 android:layout_marginTop="2dp"
                 android:layout_height="2dp"
                 android:background="#A9A9A9"
                 android:layout_marginRight="20dp"
                 android:layout_marginLeft="20dp"/>
             <EditText
                 android:id="@+id/phone_edit_text"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textSize="20sp"
                 android:textStyle="italic"
                 android:textColor="@color/white"
                 android:textAllCaps="false"
                 android:layout_marginEnd="10dp"
                 android:layout_marginStart="20sp" />

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:textSize="15sp"
                 android:text="@string/Price"
                 android:textStyle="italic"
                 android:textColor="#D3D3D3"
                 android:textAllCaps="false"
                 android:layout_marginStart="20sp"
                 android:layout_marginEnd="20dp"
                 android:paddingEnd="25sp" />
             <ImageView
                 android:layout_width="match_parent"
                 android:layout_marginTop="2dp"
                 android:layout_height="2dp"
                 android:background="#A9A9A9"
                 android:layout_marginRight="20dp"
                 android:layout_marginLeft="20dp"/>
             <EditText
                 android:id="@+id/price_edit_text"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textSize="20sp"
                 android:textStyle="italic"
                 android:textColor="@color/white"
                 android:textAllCaps="false"
                 android:layout_marginEnd="10dp"
                 android:layout_marginStart="20sp" />
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:textSize="15sp"
                 android:text="@string/brief_description"
                 android:textStyle="italic"
                 android:textColor="#D3D3D3"
                 android:textAllCaps="false"
                 android:layout_marginStart="20sp"
                 android:layout_marginEnd="20dp"
                 android:paddingEnd="25sp" />
             <ImageView
                 android:layout_width="match_parent"
                 android:layout_marginTop="5dp"
                 android:layout_height="2dp"
                 android:background="#A9A9A9"
                 android:layout_marginRight="20dp"
                 android:layout_marginLeft="20dp"/>
                 <EditText
                     android:id="@+id/create_brief_description"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="20sp"
                     android:textStyle="italic"
                     android:textColor="@color/white"
                     android:textAllCaps="false"
                     android:layout_marginEnd="10dp"
                     android:layout_marginStart="20sp" />
         </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkGrey"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/button_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:textAllCaps="false"
                android:background="@drawable/button_add_style"
                android:text="@string/update"
                android:textColor="@color/white" />
        </RelativeLayout>
     </LinearLayout>


</ScrollView>