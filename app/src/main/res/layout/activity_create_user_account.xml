<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accounts.ui.CreateUserAccount"
    android:background="@color/darkGrey">


    <FrameLayout
        android:id="@+id/user_form"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/form">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="top|center"
                android:background="@drawable/ic_fitness_member"/>
            <EditText
                android:id="@+id/name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/grey"
                android:textColor="@color/brightGrey"
                android:textColorHint="@color/brightGrey"
                android:hint="@string/Name"
                android:inputType="text"
                android:paddingStart="10dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5px"
                />

            <EditText
                android:id="@+id/email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/grey"
                android:hint="@string/prompt_email"
                android:textColor="@color/brightGrey"
                android:textColorHint="@color/brightGrey"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5px" />


            <EditText
                android:id="@+id/phone_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/grey"
                android:hint="@string/Phone"
                android:textColor="@color/brightGrey"
                android:textColorHint="@color/brightGrey"
                android:inputType="phone"
                android:paddingStart="10dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5px"
                />

            <EditText
                android:id="@+id/password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/grey"
                android:hint="@string/prompt_password"
                android:textColor="@color/brightGrey"
                android:textColorHint="@color/brightGrey"
                android:inputType="textPassword"
                android:paddingStart="10dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp">

                <Button
                    android:id="@+id/button_create_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/button_add_style"
                    android:text="@string/Sign_up"
                    android:textColor="#ffffff" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
